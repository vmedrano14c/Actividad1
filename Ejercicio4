package com.mycompany.ejercicio4;

/**
 *
 * @author Usuario
 */
import java.util.Scanner;
public class Ejercicio4 {

    public static void main(String[] args) {
        int juan, alberto, ana, mama;
        Scanner entrada = new Scanner(System.in);
        System.out.println("Ingrese la edad de Juan: ");
        
        juan = entrada.nextInt();
        alberto = (2*juan)/3;
        ana = (4*juan)/3;
        mama = juan + alberto + ana;
        System.out.println("La edad de la Mamá es: "+mama+ " años");
        System.out.println("La edad de la Juan es: "+juan+ " años");
        System.out.println("La edad de la Alberto es: "+alberto+ " años");
        System.out.println("La edad de la Ana es: "+ana+ " años");
    }
}
